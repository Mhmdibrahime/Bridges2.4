@model Bridges2._4.Models.DashBoardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stations</title>
    <!-- ======= Styles ====== -->
    <link rel="stylesheet" href="~/css/station-tyle.css">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="ticket-outline"></ion-icon>
                        </span>
                        <span class="title">Booking Train</span>
                    </a>
                </li>

                <li>
                    <a asp-action="Dashboard" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="train-outline"></ion-icon>
                        </span>
                        <span class="title"> Train</span>
                    </a>
                </li>

                <li>
                    <a asp-action="Station" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Station</span>
                    </a>
                </li>

                <li>
                    <a asp-action="Schedule" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="list-outline"></ion-icon>
                        </span>
                        <span class="title">Schedule</span>
                    </a>
                </li>


                <li>
                    <a asp-action="User" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">User</span>
                    </a>
                </li>
                <br></br>
                <br></br>
                <br></br>
                <br></br>
                <br></br>

                <li>
                    <a asp-action="Logout" asp-controller="Account">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">Logout</span>
                    </a>

                </li>










            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                </div>
            </div>

            <!-- ======================= Cards ================== -->
            <!-- ================ Order Details List ================= -->
            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Station</h2>
                        <a asp-action="AddStation" asp-controller="Admin" class="btn">Add Station</a>
                    </div>

                    <table>
                        <tr>
                            <th>Station-Id</th>
                            <th>Station-Name</th>
                            <th>Station-Location</th>
                            <th></th>
                            <th></th>

                        </tr>
                        @foreach (var station in Model.Stations)
                        {
                            <tr>
                                <td>@station.StationID</td>
                                <td>@station.StationName</td>
                                <td>@station.Location</td>
                           
                                <td><a asp-action="DeleteStation" asp-controller="Admin" asp-route-id="@station.StationID"><button>Delete</button></a></td>
                            <td>
                                <a asp-action="UpdateStation" asp-controller="Admin" asp-route-id="@station.StationID"><button>Update</button></a>
                            </td>
                        </tr>
                        }

                        
                    </table>
                </div>
                <!-- ================= New Customers ================ -->
                <!-- =========== Scripts =========  -->
                <script src="station.js"></script>

                <!-- ====== ionicons ======= -->
                <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
                <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>
