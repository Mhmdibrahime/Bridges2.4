@model Bridges2._4.Models.ProfileViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Admin Dashboard | Korsat X Parmaga</title>
    <!-- ======= Styles ====== -->
    <link rel="stylesheet" href="~/css/User-Booking-style.css">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="ticket-outline"></ion-icon>
                        </span>
                        <span class="title">Booking Train</span>
                    </a>
                </li>


                <li>
                    <a asp-action="Dashboard" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="train-outline"></ion-icon>
                        </span>
                        <span class="title">Train</span>
                    </a>
                </li>

                <li>
                    <a asp-action="Station" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Station</span>
                    </a>
                </li>


                <li>
                    <a asp-action="Schedule" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="list-outline"></ion-icon>
                        </span>
                        <span class="title">Schedule</span>
                    </a>
                </li>


                <li>
                    <a asp-action="User" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">User</span>
                    </a>
                </li>
                <br></br>
                <br></br>
                <br></br>
                <br></br>
                <br></br>

                <li>
                    <a asp-action="Logout" asp-controller="Account">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">Logout</span>
                    </a>

                </li>

            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                </div>
            </div>

            <!-- ======================= Cards ================== -->
            <!-- ================ Order Details List ================= -->
            <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>@Model.FName @Model.LName</h2>

                    </div>


                    <div class="tab-pane fade" id="account-Bookings">
                        <div class="container1">
                            <div class="row1" style="justify-content:center;">
                                <div class="col-md-offset-1 col-md-16">
                                    <div class="panel">
                                        <div class="panel-body table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Train</th>
                                                        <th>Dep.Sta</th>
                                                        <th>Arr.Sta</th>
                                                        <th>Date</th>
                                                        <th>Time</th>
                                                        <th>NO.seats</th>
                                                        <th>Prefrence</th>
                                                        <th> Class</th>
                                                      
                                                        <th>Print Ticket</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.BookingDetails)
                                                    {
                                                        <tr>
                                                            <td>@item.TrainName</td>
                                                    
                                                            <td>@item.DepartureStation</td>
                                                            <td>@item.ArrivalStation</td>
                                                            <td>@item.DepartureDate</td>
                                                            <td>@item.DepartureTime</td>
                                                            <td>@item.NumberOfSeats</td>
                                                            <td>@item.SeatPreference</td>
                                                      
                                                            <td>@item.TravelClass</td>
                                                            <td><a asp-action="Ticket" asp-controller="User" asp-route-id="@item.BookingId"><button>Print Ticket</button></a></td>
                                                            <td></td>

                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ================= New Customers ================ -->
                    <!-- =========== Scripts =========  -->
                    <script src="~/station.js"></script>

                    <!-- ====== ionicons ======= -->
                    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
                    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>