@using Bridges2._4.Models.Entities
@model List<User>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Users</title>
    <!-- ======= Styles ====== -->
    <link rel="stylesheet" href="~/css/user-style.css">
</head>

<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="ticket-outline"></ion-icon>
                        </span>
                        <span class="title">Booking Train</span>
                    </a>
                </li>

                <li>
                    <a asp-action="Dashboard" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="train-outline"></ion-icon>
                        </span>
                        <span class="title">Train</span>
                    </a>
                </li>

                <li>
                    <a asp-action="Station" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Station</span>
                    </a>
                </li>
                <li>
                    <a asp-action="Schedule" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="list-outline"></ion-icon>
                        </span>
                        <span class="title">Schedule</span>
                    </a>
                </li>
                

                <li>
                    <a asp-action="User" asp-controller="Admin">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">User</span>
                    </a>
                </li>
                <br></br>
                <br></br>
                <br></br>
                <br></br>
                <br></br>

                <li>
                    <a asp-action="Logout" asp-controller="Account">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">Logout</span>
                    </a>

                </li>










            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                </div>
            </div>

            <!-- ======================= Cards ================== -->
            <!-- ================ Order Details List ================= -->
            <div class="details">
                <div class="recentOrders">
                    

                    <table>
                        <tr>
                            <th>User-Id</th>
                            <th>User-Name</th>
                            <th>User-Number</th>
                            <th>E-Mail</th>
                            <th></th>
                            <th></th>

                        </tr>
                        @foreach(var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Name</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.Email</td>

                                <td><a asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@user.Id"><button>Delete</button></a></td>
                                <td><a asp-action="UserBooking" asp-controller="Admin" asp-route-id="@user.Id"><button>Bookings</button></a></td>

                            </tr>
                        }

                    </table>
                </div>
                <!-- ================= New Customers ================ -->
                <!-- =========== Scripts =========  -->
                <script src="user.js"></script>

                <!-- ====== ionicons ======= -->
                <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
                <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>
