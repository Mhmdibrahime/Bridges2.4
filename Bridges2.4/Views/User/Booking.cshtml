    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stations = @Html.Raw(Json.Serialize(Model.stations));
            console.log("Stations:", stations);  // Debugging step
            const originCitySelect = document.getElementById('originCity');
            const destinationCitySelect = document.getElementById('destinationCity');
            const originStationSelect = document.getElementById('originStation');
            const destinationStationSelect = document.getElementById('destinationStation');

            function filterStations(city, stationSelect) {
                stationSelect.innerHTML = '<option value="">Select Station</option>';
                const filteredStations = stations.filter(station => station.location === city);
                console.log(`Filtered stations for city ${city}:`, filteredStations);  // Debugging step

                filteredStations.forEach(station => {
                    const option = document.createElement('option');
                    option.value = station.stationID;
                    option.textContent = station.stationName;
                    stationSelect.appendChild(option);
                });
            }

            originCitySelect.addEventListener('change', () => {
                filterStations(originCitySelect.value, originStationSelect);
                console.log("Origin Station Select:", originStationSelect.innerHTML);  // Debugging step
            });

            destinationCitySelect.addEventListener('change', () => {
                filterStations(destinationCitySelect.value, destinationStationSelect);
                console.log("Destination Station Select:", destinationStationSelect.innerHTML);  // Debugging step
            });
        });
    </script>



