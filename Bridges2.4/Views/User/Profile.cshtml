    </div>
    <br>



    <!-- service section -->

    <div class="container light-style flex-grow-1 container-p-y">
        <div class="h4">
            <h4 class="font-weight-bold py-3 mb-4">
                Profile
            </h4>
        </div>
        <br>    <div class="cardNew overflow-hidden">
            <div class="row1 no-gutters row-bordered row-border-light">
                <div class="col-md-2 pt-0">
                    <div class="list-group list-group-flush account-settings-links">
                        <a class="list-group-item list-group-item-action active" data-toggle="list"
                           href="#account-general" id="hossam">General</a>
                        <a class="list-group-item list-group-item-action" data-toggle="list"
                           href="#account-change-password" id="hossam">Change password</a>


                        <a class="list-group-item list-group-item-action" data-toggle="list"
                           href="#account-Bookings" id="hossam">Bookings</a>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">

                            
                            <div class="cardNew-body media align-items-center">
                                <img src="@Model.ImagePath" alt="Upload Photo "
                                     class="d-block ui-w-80" id="round-image">
                                    <form asp-action="UploadImage" asp-controller="User" method="post" enctype="multipart/form-data">
                                <div class="media-body ml-4">
                                    <label class="btn btn-outline-primary">
                                        Upload new photo
                                        <input asp-for="ImageFile" class="account-settings-fileinput">
                                    </label> &nbsp;
                                    <button type="submit" class="btn btn-default md-btn-flat" id="hossam">Confirm</button>
                                    <div class="text-light small mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                                </div>
                                    </form>
                            </div>
                            <form asp-action="ChangeInformation" asp-controller="User">
                                <hr class="border-light m-0">
                                <div class="cardNew-body" id="hossam">
                                    <div class="form-group">
                                        <label for="fullName" class="form-label">Full Name</label>
                                        <div class="form-control">@Model.FName @Model.LName</div>
                                    </div>
                                    <div class="form-group">
                                        <label for="phoneNumber" class="form-label">Phone Number</label>
                                        <div class="form-control">@Model.Phone</div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="form-label">E-mail</label>
                                        <div class="form-control mb-1" id="email">@Model.Email</div>
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="tab-pane fade" id="account-change-password">
                            <div class="cardNew-body pb-2" id="hossam">
                                <form asp-action="ChangePassword" asp-controller="User">
                                <div class="form-group">
                                    <label class="form-label">Current password</label>
                                    <input asp-for="CurrentPassword" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">New password</label>
                                    <input asp-for="NewPassword" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Repeat new password</label>
                                    <input asp-for="ConfirmNewPassword" class="form-control">
                                </div>
                                <div class="form-btn" style="text-align: center;">
                                    <button class="submit-btn">Done</button>
                                </div>
                                </form>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-Bookings">
                            <div class="container1">
                                <div class="row1" style="justify-content:left;">
                                    <div class="col-md-offset-1 col-md-16">
                                        <div class="panel">
                                            <div class="panel-body table-responsive">
                                                <table class="table ">
                                                    <thead>
                                                        <tr>
                                                            

                                                            <th>Train</th>
                                                            <th>Dep.Sta</th>
                                                            <th>Arr.Sta</th>
                                                            <th>Date</th>
                                                            <th>Time</th>
                                                            <th>No.Seats</th>
                                                            <th> Preference</th>
                                                            <th> Class</th>
                                                            
                                                            <th>Print Tickets</th>
                                                            
                                                           
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.BookingDetails)
                                                        {
                                                            <tr>
                                                                <td>@item.TrainName</td>
                                                               
                                                                <td>@item.DepartureStation</td>
                                                                <td>@item.ArrivalStation</td>
                                                                <td>@item.DepartureDate</td>
                                                                <td>@item.DepartureTime</td>
                                                                <td>@item.NumberOfSeats</td>
                                                                <td>@item.SeatPreference</td>
                                                                <td>@item.TravelClass</td>
                                                                
                                                                <td><a asp-action="Ticket" asp-controller="User" asp-route-id="@item.BookingId"><button>Print Ticket</button></a></td>
                                                                <td></td>
                                                                
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end service section -->
